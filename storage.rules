rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Fotos de check-in: qualquer autenticado pode ler; apenas o dono pode gravar
    match /checkins/{groupId}/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fotos de perfil: qualquer autenticado pode ler; apenas o dono pode gravar
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
