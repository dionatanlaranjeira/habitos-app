rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuários só podem ler e gravar o próprio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Grupos: leitura para busca por código; criação para donos; atualização para membros ou novos membros (join)
    match /groups/{groupId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.ownerId
        && request.auth.uid in request.resource.data.memberIds;

      allow update: if request.auth != null && (
        // Membro atual pode atualizar
        request.auth.uid in resource.data.memberIds ||
        (
          // Novo membro pode se adicionar (join)
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberIds']) &&
          request.resource.data.memberIds.size() <= 10 &&
          request.auth.uid in request.resource.data.memberIds
        )
      );

      // Subcoleção de membros: membros do grupo podem ler; o usuário pode gravar o próprio
      match /members/{userId} {
        allow read: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberIds;
        
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Subcoleção de check-ins: membros podem ler; o próprio usuário pode criar
      match /checkins/{checkinId} {
        allow read: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberIds;

        allow create: if request.auth != null
          && request.auth.uid == request.resource.data.userId;
      }
    }

    // Biblioteca de hábitos: leitura para todos autenticados
    match /habits/{habitId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Categorias: leitura para todos autenticados
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Modos de Jogo: leitura para todos autenticados
    match /game_modes/{modeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Durações de Temporada: leitura para todos autenticados
    match /season_durations/{durationId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
